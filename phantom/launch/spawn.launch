<?xml version="1.0" encoding="UTF-8"?>
<launch>
	
	<group ns="/phantom_sim">

		<!-- Launch Gazebo    	-->	

		<include file="$(find gazebo_ros)/launch/empty_world.launch">

			<arg name="paused" value="true"/>
    		
  		</include> 

		


		<!-- Robot Model -->
        <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find phantom)/urdf/phantom_description_M_Gazebo.xacro'" />
		<arg name="x" default="0.0"/>
		<arg name="y" default="0.0"/>
		<arg name="z" default="0.772"/>

		<!-- Spawn Robot Model  -->
		<node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="log" respawn="true" 
		      args="-urdf -param robot_description -model PhantomXPincher -x $(arg x) -y $(arg y) -z $(arg z)" />

		<!-- Load controllers -->
        	<rosparam command="load" file="$(find phantom)/config/joint.yaml" />
        
		<!-- Controllers -->
		<node name="controller_spawner" pkg="controller_manager"  type="spawner"
		    respawn="false" output="screen" ns="/phantom_sim"
		    args="--namespace=/phantom_sim
			joint_state_controller
		    joint1_position_controller
		    joint2_position_controller
		    joint3_position_controller
		    joint4_position_controller
		    joint5_position_controller
		    joint6_position_controller
			--timeout 60">
		</node>  
		
		<!-- rqt -->
		<node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" />
		<node name="rqt_publisher" pkg="rqt_publisher" type="rqt_publisher" /> 

	</group>

</launch>
